# ──────────────── orami's Kitty Config ────────────────
# Archivo: ~/.config/kitty/kitty.conf
# Tema: Cyberpunk Sakura

# Fuente (asegurate de tener nerd fonts instaladas)
font_family      JetBrainsMono Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        12.0

# Apariencia
cursor_shape     block
cursor_blink     off
window_padding_width 10
window_margin_width  5
enable_audio_bell no

# Opacidad y blur
background_opacity 0.85

# Colores principales
foreground   #a9b1d6
background   #1a1b26
selection_foreground #000000
selection_background #bb9af7
url_color    #73daca

# Colores ANSI
# negro
color0  #1a1b26  

# rojo sakura
color1  #f7768e  

# verde
color2  #9ece6a  

# amarillo
color3  #e0af68  

# azul
color4  #7aa2f7  

# violeta
color5  #bb9af7  

# cyan
color6  #7dcfff  

# gris claro
color7  #a9b1d6  

# gris oscuro
color8  #414868  

# rojo neon
color9  #ff007c  

# verde fosforescente
color10 #00ff87  

# amarillo laser
color11 #f5f500  

# cyan brillante
color12 #00cfff  

# magenta neon
color13 #ff00ff  

# aqua cyber
color14 #5fffff  

# blanco puro
color15 #ffffff  

# Barra de pestañas
tab_bar_style powerline
active_tab_foreground   #1a1b26
active_tab_background   #7aa2f7
inactive_tab_foreground #a9b1d6
inactive_tab_background #24283b

# Scrolling
scrollback_lines 10000

# Keybindings extra (ejemplo copiar/pegar estilo Linux)
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard
